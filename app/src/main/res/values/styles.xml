<resources>

    <style name="TabLayoutStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="whiteTxt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="whiteTxtBig">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="normalTxt">
        <item name="android:textColor">@color/normal_txt</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="normalTxtBig">
        <item name="android:textColor">@color/normal_txt</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="themeTxt">
        <item name="android:textColor">@color/theme_color_primary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="menu_labels_style">
        <item name="fab_colorNormal">@color/theme_color_primary</item>
        <item name="fab_colorPressed">@color/theme_color_primary_dark</item>
        <item name="fab_colorRipple">@color/theme_color_primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/normal_txt</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/white</item>
        <item name="bs_dividerColor">@color/grey</item>
        <item name="bs_numColumns">5</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>

</resources>
